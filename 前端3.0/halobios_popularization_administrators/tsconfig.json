{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,

    "allowJs": true,                                      // 编译时，允许有 js 文件
    "noImplicitAny": false,                               // 不进行any语法检查
    "allowSyntheticDefaultImports":true,// 允许引入没有默认导出的模块
  },
  "include": [
    "src/**/*.js",  // 导入js
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/store/index.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
